<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assignment_adapater_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:cacheColorHint="#00000000"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/adapter_finish_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"

        android:button="@drawable/checkbox"
        android:checked="false"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/adapter_item_title"
        android:typeface="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:text="99 PROBLEMS"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:id="@+id/adapter_dueDatetitle"
        android:layout_width="wrap_content"
        android:typeface="serif"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_item_title"
        android:layout_marginLeft="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/black"
        android:layout_alignBaseline="@+id/adapter_dueDate"

        android:text="@string/duedatetitle"
        />

    <TextView
        android:id="@+id/adapter_dueDate"
        android:typeface="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/adapter_dueDatetitle"
        android:text = "00-00-000"/>


</RelativeLayout>

